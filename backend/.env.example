# Banco de dados
DATABASE_URL="file:./dev.db"

# Servidor
PORT=3001

# CORS - URL do frontend
FRONTEND_URL="http://localhost:5173"

# WhatsApp do vendedor (formato: 55DDDNNNNNNNNN)
WHATSAPP_NUMBER="5511999999999"

# Segurança - API Keys
# IMPORTANTE: Altere estes valores em produção!
# Use strings longas e aleatórias (ex: openssl rand -hex 32)
API_KEY="sua-api-key-secreta-aqui"
ADMIN_KEY="sua-admin-key-super-secreta-aqui"

# Ambiente (development | production)
NODE_ENV="development"

# Sentry (Monitoramento de erros)
# Obtenha seu DSN em: https://sentry.io
SENTRY_DSN=

# Logging
LOG_LEVEL=info

# JWT Secrets (ALTERAR EM PRODUÇÃO!)
# Use: openssl rand -hex 32
JWT_SECRET=seu-jwt-secret-super-secreto-mude-em-producao
JWT_REFRESH_SECRET=seu-jwt-refresh-secret-super-secreto-mude-em-producao
